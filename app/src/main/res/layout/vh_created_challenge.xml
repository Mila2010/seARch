<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        >
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_created_challenge_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_hint"/>

        <TextView
            android:id="@+id/tv_created_challenge_pursuing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hint"/>
        <TextView
            android:id="@+id/tv_created_challenge_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_created_challenge_pursuing"/>

    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_created_challenge_image"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_marginBottom="7dp"
        android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.v7.widget.CardView>